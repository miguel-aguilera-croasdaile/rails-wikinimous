<div class="container">

  <h1>Articles</h1>
  <hr>
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="card">
        <p> <%= link_to article.title, article_path(article) %></p>
      </div>
    </div>
    <% end %>
  </div>
  <hr>
  <%= link_to "New article", new_article_path  %>
  <hr>
</div>
